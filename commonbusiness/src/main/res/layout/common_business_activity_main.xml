<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.example.commonbusiness.util.widget.RegisterEditTextView
        android:id="@+id/retv_account"
        android:layout_width="@dimen/common_business_retv_widht"
        android:layout_height="48dp"
        android:layout_gravity="center"
        app:et_hint_text="账号名"
        app:maxLenght="12"
        app:tv_error_text="6～12位数字大小写英文"
        app:input_hint="6～12位数字大小写英文"
        app:tv_error_isVisibility="false"
        app:left_img_height="24dp"
        app:left_img_src="@drawable/user_name"
        app:left_img_width="16.6dp"
        app:required_isShowing="true"
        app:input_type="onlyChinese"
        />

    <com.example.commonbusiness.util.widget.RegisterEditTextView
        android:id="@+id/retv_phone_no"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        app:et_hint_text="手机号码"
        app:tv_error_text="请输入真实有效手机号码 "
        app:tv_error_isVisibility="false"
        app:left_img_height="24dp"
        app:maxLenght="11"
        app:digits="0123456789"
        app:left_img_src="@drawable/mobile"
        app:left_img_width="16.6dp"
        app:required_isShowing="true"
        app:input_hint="请输入真实有效手机号码 "
        />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="登录"

        />

</LinearLayout>